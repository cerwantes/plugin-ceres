+
+        ...mapState({
+            currentVariationVariationId(state)
+            {
+                const currentVariation = state.item.variation && state.item.variation.documents && state.item.variation.documents[0].data;
+
+                if (isNullOrUndefined(currentVariation))
+                {
+                    return null;
+                }
