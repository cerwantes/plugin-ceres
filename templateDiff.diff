+import { ButtonSizePropertyMixin } from "../../mixins/buttonSizeProperty.mixin";
+
+const NotificationService = require("../../services/NotificationService");
+
+export default {
+    mixins: [ButtonSizePropertyMixin],
+
+    props:
+    {
+        itemUrl: String,
+        showQuantity:
+        {
+            type: Boolean,
+            default: false
+        },
+        useLargeScale:
+        {
+            type: Boolean,
+            default: false
+        },
+        missingOrderProperties:
