+                            }
+                            NotificationService.error(
+                                this.$translate(translationKey)
+                            ).closeAfter(10000);
+                            break;
+                        default:
+                            return;
+                    }
+                });
+        },
+
+        showResetPwdView()
+        {
+            this.resetError();
+
+            this.$store.dispatch("loadComponent", "forgot-password-modal");
+
+            if (this.modalElement)
