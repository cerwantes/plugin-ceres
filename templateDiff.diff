+                    @keyup.enter="search()" @focus="isSearchFocused = true" @blur="setIsSearchFocused(false)" :autofocus="isShopBuilder">
+
+                <slot name="search-button">
+                    <button class="search-submit px-3" type="submit" @click="search()">
