+        },
+        isSalable:
+        {
+            type: Boolean,
+            default: false
+        },
+        hasChildren:
+        {
+            type: Boolean,
+            default: false
+        },
+        intervalQuantity:
+        {
+            type: Number,
+            default: 1
+        },
+        minimumQuantity:
+        {
+            type: Number,
+            default: 0
+        },
+        maximumQuantity:
+        {
+            type: Number,
+            default: null
+        },
+        orderProperties:
+        {
+            type: Array,
+            default: () => []
+        },
+        hasOrderProperties:
+        {
+            type: Boolean,
+            default: false
