+                    });
+            }
+            else
+            {
+                ModalService.findModal(document.getElementById("resetPwd")).show();
+            }
+
+        },
+
+        resetError()
+        {
+            this.loginFields.forEach( element => element.classList.remove("has-login-error"));
+            ValidationService.unmarkAllFields("#login-form-" + this._uid);
+        }
+    }
+}
+</script>
