+            setTimeout(() =>
+            {
+                this.isSearchFocused = !!value;
+            }, 100);
+        }
+    },
+
+    watch:
+    {
+        // set the current search string, after clicking on a suggestion
+        moduleSearchString(newVal)
+        {
+            if (newVal && newVal.length)
+            {
+                this.searchString = newVal;
+            }
+        }        
+    }
+}
